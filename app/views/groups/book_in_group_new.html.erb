<% provide(:title, 'Create book in group') %>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_with model: @book, url: book_in_group_create_path(@group), local: true do |f| %>

        <% if @book.errors.any? %>
		      <div id="error_explanation">
		        <div class="alert alert-danger">
		          The form contains <%= pluralize(@book.errors.count, "error") %>.
		        </div>
		        <ul>
		          <% @book.errors.full_messages.each do |msg| %>
		            <li><%= msg %></li>
		          <% end %>
		        </ul>
		      </div>
        <% end %>

        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
        
        <%= f.label :image %>
        <%= f.file_field :image %>

        <%= f.submit "Create book", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>